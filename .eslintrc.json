{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true // Add this line
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "react/react-in-jsx-scope": "off"
  },
  "ignorePatterns": ["build/**", "build.mjs", "src/utils/is-mobile.mjs"],
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
